{
  "name": "auto-config-env",
  "displayName": "auto_config_env",
  "description": "An extension to auto config environment of python project with LLMs.",
  "publisher": "WanjingHuang",
  "icon": "resources/light/autoconfig-light.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/hwj20/auto-config-env"
  },
  "version": "1.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.autoConfig",
        "title": "Auto Config",
        "icon": {
                    "light": "resources/light/autoconfig-light.png",
                    "dark": "resources/dark/autoconfig-dark.png"
                }
      },
      
      {
        "command": "extension.runPythonAndHandleErrors",
        "title": "Environment Debug",
        "icon": {
                    "light": "resources/light/debug-light.png",
                    "dark": "resources/dark/debug-dark.png"
                }
      },
      
      {
          "command": "extension.completeImports",
          "title": "Complete Imports",
        "icon": {
                    "light": "resources/light/add-light.png",
                    "dark": "resources/dark/add-dark.png"
                }
      },
      {
        "command": "extension.generateRequirements",
        "title": "Genearte Requirements.txt"
      }
    ],
    
      "menus": {
        "editor/title": [
            {
                "command": "extension.autoConfig",
                "when": "resourceExtname == .py",
                "group": "navigation"
            },
            {
                "command": "extension.runPythonAndHandleErrors",
                "when": "resourceExtname == .py",
                "group": "navigation"
            },
            {
                "command": "extension.completeImports",
                "when": "resourceExtname == .py",
                "group": "navigation"
            }            
        ],
        "explorer/context": [
            {
                "command": "extension.generateRequirements",
                "when": "explorerResourceIsFolder",
                "group": "navigation"
            }
        ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.91.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "openai": "^4.52.7"
  }
}
